<Window x:Class="Library.AutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Autors" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgAutorList" Loaded="dgAutorList_Loaded" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=FirstName}" IsReadOnly="False" Header="First Name" Width="50*"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=SecondName}" IsReadOnly="False" Header="Second Name" Width="50*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
